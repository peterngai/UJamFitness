<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/infobox_layout"
             android:orientation="vertical"
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_gravity="bottom"
             android:translationY="771dp"
             android:paddingBottom="4dp"
             android:background="@drawable/container_dropshadow">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_height="68dp"
            android:layout_width="match_parent"
            android:background="@drawable/info_pane_header_bg"
            android:divider="@drawable/info_pane_vert_divider"
            android:showDividers="middle"
            android:dividerPadding="6dp"
            android:id="@+id/PaneHeaderView">
        <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="20dp"
                android:layout_marginLeft="5dp"
                android:scaleType="fitXY"
                android:id="@+id/StarButton"
                android:background="@drawable/ujamlogo_sel"
                android:layout_gravity="center" />
        <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1">
            <TextView
                    android:id="@+id/infoBox_instructor"
                    android:text="Instructor Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:layout_marginBottom="2dp"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:textSize="20sp" />
            <TextView
                    android:id="@+id/infoBox_gymname"
                    android:text="Gym Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:id="@+id/stationStats">
                <TextView
                        android:text="Day"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/infoBox_day"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textColor="#ff333333"
                        android:textSize="21sp"
                        android:layout_marginRight="2dp" />
                <TextView
                        android:text="Time"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/infoBox_time"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textColor="#ff333333"
                        android:textSize="14sp"
                        android:layout_marginRight="2dp" />
        </LinearLayout>
        <ImageView
                android:src="@android:color/transparent"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:id="@+id/stationLock"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"
                android:visibility="gone" />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/infoBox_multi_class_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
                android:text="Classes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/info_pane_section" />
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="#F9F9F9"
                android:scrollbarAlwaysDrawVerticalTrack="true">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <LinearLayout
                        android:id="@+id/infoBox_multi_class_line"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:orientation="horizontal"
                        android:background="@drawable/info_pane_underline">
                    <ImageButton
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="20dp"
                            android:layout_marginLeft="5dp"
                            android:scaleType="fitXY"
                            android:id="@+id/StarButton"
                            android:background="@drawable/ujamlogo_sel"
                            android:layout_gravity="center" />
                    <TextView
                            android:id="@+id/infoBox_multi_instructor0"
                            android:text="Instructor Name"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:paddingTop="12dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="2dp"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:textSize="20sp" />
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_width="60dp"
                            android:id="@+id/stationStats">
                        <TextView
                                android:text="Day"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/infoBox_multi_day0"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:textColor="#ff333333"
                                android:textSize="21sp"
                                android:layout_marginRight="2dp" />
                        <TextView
                                android:text="Time"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/infoBox_multi_time0"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:textColor="#ff333333"
                                android:textSize="14sp"
                                android:layout_marginRight="2dp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/infoBox_multi_class_line"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:orientation="horizontal"
                    android:background="@drawable/info_pane_underline">
                    <ImageButton
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="20dp"
                            android:layout_marginLeft="5dp"
                            android:scaleType="fitXY"
                            android:id="@+id/StarButton"
                            android:background="@drawable/ujamlogo_sel"
                            android:layout_gravity="center" />
                    <TextView
                            android:id="@+id/infoBox_multi_instructor1"
                            android:text="Instructor Name"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:paddingTop="12dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="2dp"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:textSize="20sp" />
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_width="60dp"
                            android:id="@+id/stationStats">
                        <TextView
                                android:text="Day"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/infoBox_multi_day1"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:textColor="#ff333333"
                                android:textSize="21sp"
                                android:layout_marginRight="2dp" />
                        <TextView
                                android:text="Time"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/infoBox_multi_time1"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:textColor="#ff333333"
                                android:textSize="14sp"
                                android:layout_marginRight="2dp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/infoBox_multi_class_line"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:orientation="horizontal"
                    android:background="@drawable/info_pane_underline">
                    <ImageButton
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="20dp"
                            android:layout_marginLeft="5dp"
                            android:scaleType="fitXY"
                            android:id="@+id/StarButton"
                            android:background="@drawable/ujamlogo_sel"
                            android:layout_gravity="center" />
                    <TextView
                            android:id="@+id/infoBox_multi_instructor2"
                            android:text="Instructor Name"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:layout_marginBottom="2dp"
                            android:paddingTop="12dp"
                            android:layout_marginLeft="10dp"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:textSize="20sp" />
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_width="60dp"
                            android:id="@+id/stationStats">
                        <TextView
                                android:text="Day"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/infoBox_multi_day2"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:textColor="#ff333333"
                                android:textSize="21sp"
                                android:layout_marginRight="2dp" />
                        <TextView
                                android:text="Time"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/infoBox_multi_time2"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:textColor="#ff333333"
                                android:textSize="14sp"
                                android:layout_marginRight="2dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <TextView
            android:text="Location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/info_pane_section" />
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent">
        <ImageView
                android:id="@+id/infoBox_nav_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:paddingRight="5dp"
                android:src="@drawable/ic_action_nav"/>
        <TextView
                android:id="@+id/infoBox_gymloc"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:text="Gym Address"
                android:textColor="#666666"
                android:gravity="left"
                android:textSize="14sp"/>
        <TextView
                android:id="@+id/infoBox_gymphone"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:autoLink="phone"
                android:text="Gym Phone"
                android:textColor="#666666"
                android:gravity="right"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textSize="14sp" />
    </LinearLayout>

